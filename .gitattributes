# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf
*.sh text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.ini text eol=lf
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Windows-specific files
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.rar binary

# Python bytecode (should be in gitignore, but mark as binary just in case)
*.pyc binary
*.pyo binary
*.pyd binary

# Jupyter notebooks (treat as text for diff)
*.ipynb text

# Lock files (preserve exact formatting)
uv.lock text eol=lf
poetry.lock text eol=lf
package-lock.json text eol=lf
yarn.lock text eol=lf

# Git diff settings for specific file types
*.py diff=python
*.md diff=markdown

# Linguist overrides (for GitHub language statistics)
# Exclude generated files and dependencies from language stats
*.lock linguist-generated=true
coverage/* linguist-generated=true
htmlcov/* linguist-generated=true
.venv/* linguist-vendored=true
node_modules/* linguist-vendored=true
__pycache__/* linguist-generated=true
*.pyc linguist-generated=true
