{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"src/static/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": "on",
			"security": "on",
			"style": "on",
			"a11y": "on",
			"correctness": "on",
			"complexity": "on",
			"nursery": {
				"recommended": false
			}
		}
	},
	"html": {
		"formatter": {
			"enabled": true,
			"lineWidth": 120,
			"attributePosition": "auto"
		}
	},
	"javascript": {
		"globals": [
			"$",
			"_",
			"Alpine",
			"Tabulator",
			"mdc",
			"L",
			"i18next",
			"i18nextHttpBackend",
			"updateI18nTexts"
		],
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}