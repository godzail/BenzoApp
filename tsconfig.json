{
    "compilerOptions": {
        "rootDir": "src/static/ts",
        "outDir": "src/static/js",
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "Bundler",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "ES2020"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src/static/ts/**/*.ts"
    ]
}