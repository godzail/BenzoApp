{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "types": [
            "bun-types"
        ],
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "rootDir": "src/static/ts",
        "outDir": "src/static/js",
        "sourceMap": true,
        "moduleResolution": "node",
        "noEmitOnError": true
    },
    "include": [
        "src/static/ts/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/static/js"
    ]
}